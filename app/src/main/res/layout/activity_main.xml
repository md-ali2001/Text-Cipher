<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
       android:weightSum="100"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/ent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="41.7"
            android:inputType="textMultiLine"
            android:hint="ENTER TEXT TO BE ENCRYPTED"
            android:textSize="20sp" />

        <Button
            android:id="@+id/clearbuttonencryption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:onClick="clearenc"
            android:text="CLEAR"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5" />

        <Button
            android:id="@+id/enb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:onClick="doenc"
            android:text="ENCRYPT"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/det"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="41.7"
            android:inputType="textMultiLine"
            android:hint="ENTER TEXT TO BE DECRYPTED"
            android:textSize="20sp" />

        <Button
            android:id="@+id/clearbuttondecryption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="clear"
            android:onClick="cleardec"

            android:textSize="30sp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5" />

        <Button
            android:id="@+id/deb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:onClick="dodec"
            android:text="DECRYPT"
            android:textSize="30sp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>